<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/bills_total_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bills Total: "
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/wants_total_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wants Total: "
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/savings_total_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Savings Total: "
        android:textSize="20sp"/>


    <TextView
        android:id="@+id/overall_total_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Overall Total: "
        android:textSize="20sp"/>

    <Button
        android:id="@+id/data_display_back_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Back" />
</LinearLayout>

