<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/Paymentbutton"
        android:layout_width="161dp"
        android:layout_height="58dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="493dp"
        android:layout_marginEnd="118dp"
        android:layout_marginBottom="180dp"
        android:text="@string/Paymentbutton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/IncomeButton"
        android:layout_width="160dp"
        android:layout_height="53dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="565dp"
        android:layout_marginEnd="119dp"
        android:layout_marginBottom="113dp"
        android:text="@string/IncomeButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/BudgetButton"
        android:layout_width="158dp"
        android:layout_height="57dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="636dp"
        android:layout_marginEnd="121dp"
        android:layout_marginBottom="38dp"
        android:text="@string/BudgetButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/optionsText"
        android:layout_width="351dp"
        android:layout_height="38dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="419dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="274dp"
        android:text="@string/please_select_one_of_the_options_below"
        android:textColor="@color/cardview_dark_background"
        android:textSize="19.6sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/MainImage"
        android:contentDescription="@string/budgetimagemain"
        android:layout_width="263dp"
        android:layout_height="244dp"
        android:layout_marginStart="74dp"
        android:layout_marginTop="138dp"
        android:layout_marginEnd="74dp"
        android:layout_marginBottom="349dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/menu_image" />

    <TextView
        android:id="@+id/TopHeader_TextView"
        android:layout_width="361dp"
        android:layout_height="54dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="619dp"
        android:text="@string/TopHeader_TextView"
        android:textColor="@color/black"
        android:textSize="43sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>